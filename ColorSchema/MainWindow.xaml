<Window x:Class="ColorSchema.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorSchema"
        mc:Ignorable="d"
        Title="Color schema" Height="350" Width="525">
    <Grid Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Name="txtboxName" VerticalAlignment="Top" Margin="5">Name</TextBox>
        <TextBox Name="txtboxColor" VerticalAlignment="Center" Margin="5">Color</TextBox>
        <Button VerticalAlignment="Bottom" Margin="5" Click="Button_Click">Register user</Button>
    </Grid>
</Window>
